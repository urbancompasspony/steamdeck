# Create:
distrobox create ubuntu --image docker.io/library/ubuntu:22.04 --root

# Inside container do:
sudo apt install beep inxi curl nmap parallel smartmontools tmux zip unzip dialog udpcast traceroute arp-scan net-tools netdiscover rdesktop scrcpy speedtest-cli whois
sudo apt install btop rsnapshot rclone openssh-server net-tools haveged arp-scan cifs-utils netdiscover w3m w3m-img iotop htop lm-sensors samba 
sudo apt install samba-dsdb-modules samba-vfs-modules sshpass speedtest-cli traceroute build-essential libatasmart-bin btrfs-progs
sudo apt install qemu qemu-kvm qemu-system qemu-guest-agent libvirt-clients libvirt-daemon-system bridge-utils virt-manager ovmf dnsmasq

sudo service dbus start
libvirtd -d
sudo libvirtd -d
virt-manager


