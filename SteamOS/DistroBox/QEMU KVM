# Create:
distrobox create ubuntu --image docker.io/library/ubuntu:22.04 --root

# Inside container do:
sudo apt install qemu qemu-kvm qemu-system qemu-guest-agent libvirt-clients libvirt-daemon-system bridge-utils virt-manager ovmf dnsmasq

sudo mkdir /run/libvirt
sudo setfacl -m user:$USER:rw /run/libvirt

Inside Container:

sudo usermod -aG libvirt deck
sudo usermod -aG libvirt-qemu deck
exit
sudo chmod 777 -R /var/run/libvirt
sudo service dbus start
sudo libvirtd -d
sudo virtlogd -d
virt-manager
