
grub-install --efi-directory=/boot/efi
grub-mkconfig -o /boot/grub/grub.cfg
dracut-rebuild



grub-install --target=x86_64-efi --efi-directory=/boot/efi --bootloader-id=endeavouros --modules="tpm" --disable-shim-lock
grub-mkconfig -o /boot/grub/grub.cfg
grub-install --target=i386-pc /dev/sdc

pacman -S sbsigntools

grub-install --target=x86_64-efi --efi-directory=/boot/efi --modules=${GRUB_MODULES} --sbat /usr/share/grub/sbat.csv

sbsign --key MOK.key --cert MOK.crt --output /boot/efi/EFI/GRUB/grubx64.efi /boot/efi/EFI/endeavouros/grubx64.efi
